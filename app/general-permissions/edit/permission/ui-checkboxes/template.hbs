<div class="panel panel-default">
    <div class="panel-heading">UI Checkboxes for <br />
      "{{model.name}}"</div>
    <div class="panel-body">
        <label>View
          {{view "select"
            content=uiSelectOptions
            optionValuePath="content.id"
            optionLabelPath="content.label"
            value=model.read
            prompt="Select"
          }}
        </label><br />
        <label>Add
          {{view "select"
            content=uiSelectOptions
            optionValuePath="content.id"
            optionLabelPath="content.label"
            value=model.create
            prompt="Select"
          }}
        </label><br />
        <label>Edit
          {{view "select"
            content=uiSelectOptions
            optionValuePath="content.id"
            optionLabelPath="content.label"
            value=model.update
            prompt="Select"
          }}
        </label><br />
        <label>Delete
          {{view "select"
          content=uiSelectOptions
          optionValuePath="content.id"
          optionLabelPath="content.label"
          value=model.delete
          prompt="Select"
          }}
        </label>
    </div>
</div>
